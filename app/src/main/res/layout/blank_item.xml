<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/blank_item_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/loading_error_tips_image"
        />

    <TextView
        android:id="@+id/blank_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGreenDark"
        android:text="name"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/blank_item_salePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sale"
            android:textColor="@color/colorRed"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/blank_item_smarkePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="smarke"
            android:textSize="14sp"
            android:layout_toRightOf="@id/blank_item_salePrice"
            />

        <TextView
            android:id="@+id/blank_item_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.0æŠ˜"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:background="@color/colorRed"
            android:textColor="@color/colorWhite"
            />

    </RelativeLayout>
</LinearLayout>